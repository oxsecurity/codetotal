{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "esModuleInterop": true,
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["cypress"]
}
